#define CANTELEM 1

#define CALCDIFIC ((10 - pjugada->dim) / 2)
#define CALCDIM (10 - dificultad * 2)

enum dificultad {FACIL=1, INTERMEDIO, DIFICIL};

int tamMatriz(int dificultad)
{
int tamMat=0;

switch(dificultad) {
    case FACIL: {
        tamMat=8;
        break;
    }
    case INTERMEDIO: {
        tamMat=6;
        break;
    }
    case DIFICIL: {
        tamMat=4;
        break;
    }
}
return tamMat;
}

int cantUndo(int dificultad)
{
int undo=0;

switch(dificultad) {

    case FACIL: {
              undo=8;
              break;
    }
    case INTERMEDIO: {
              undo=4;
              break;
    }
    case DIFICIL: {
              undo=2;
